{
  "title": "PostgreSQL",
  "uid": "postgres",
  "timezone": "browser",
  "refresh": "30s",
  "schemaVersion": 39,
  "panels": [
    {
      "id": 1,
      "title": "Status",
      "type": "stat",
      "gridPos": { "h": 4, "w": 24, "x": 0, "y": 0 },
      "datasource": { "uid": "local-prometheus" },
      "targets": [{ "expr": "pg_up", "legendFormat": "{{job}}" }],
      "options": {
        "reduceOptions": {
          "values": false,
          "calcs": [
            "lastNotNull"
          ],
          "fields": ""
        },
        "orientation": "auto",
        "textMode": "auto",
        "colorMode": "background",
        "graphMode": "area",
        "justifyMode": "auto"
      },
      "fieldConfig": {
        "defaults": {
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "red", "value": null },
              { "color": "green", "value": 1 }
            ]
          },
          "min": 0,
          "max": 1
        },
        "overrides": []
      }
    },
    {
      "id": 2,
      "title": "Transactions / sec",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "datasource": { "uid": "local-prometheus" },
      "targets": [{ "expr": "irate(pg_stat_database_xact_commit[5m])", "legendFormat": "{{datname}} - {{job}}" }]
    },
    {
      "id": 3,
      "title": "Active Connections",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "datasource": { "uid": "local-prometheus" },
      "targets": [{ "expr": "sum by (job) (pg_stat_activity_count)", "legendFormat": "{{job}}" }]
    },
    {
      "id": 4,
      "title": "Database Size",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 12 },
      "datasource": { "uid": "local-prometheus" },
      "targets": [{ "expr": "pg_database_size_bytes", "legendFormat": "{{datname}} - {{job}}" }],
      "fieldConfig": { "defaults": { "unit": "bytes" } }
    }
  ]
}